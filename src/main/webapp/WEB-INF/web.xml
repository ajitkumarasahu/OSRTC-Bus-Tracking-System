<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    web.xml â€“ Deployment Descriptor
    Configures the Jersey servlet for RESTful web services
-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Application display name -->
    <display-name>OSRTC Bus Tracking System</display-name>

    <!-- Jersey Servlet Configuration -->
    <servlet>
        <servlet-name>jersey-servlet</servlet-name>

        <!-- Jersey's main servlet container -->
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <!-- Package(s) to scan for REST controllers and providers -->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>
                com.osrtc.bustracking.controller,
                com.osrtc.bustracking.exception
            </param-value>
        </init-param>

        <!-- Load servlet at application startup -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Map Jersey servlet to /api/* URL pattern -->
    <servlet-mapping>
        <servlet-name>jersey-servlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

</web-app>
